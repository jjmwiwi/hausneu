{
  "name": "hausverwaltung",
  "version": "0.1.0",
  "description": "Hausverwaltungssoftware (WEG Stuttgarter Straße) – Desktop-App",
  "main": "main.js",
  "author": "You",
  "license": "MIT",
  "scripts": {
    "dev": "vite --port 3000",
    "start": "concurrently -k \"npm:dev\" \"npm:electron\"",
    "electron": "wait-on tcp:3000 && cross-env NODE_ENV=development VITE_DEV_SERVER_PORT=3000 electron .",
    "build": "vite build && electron-builder",
    "preview": "vite preview",
    "postinstall": "electron-builder install-app-deps",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "test": "jest --runInBand",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "dayjs": "^1.11.13",
    "electron-store": "^8.2.0",
    "lucide-react": "^0.539.0",
    "pdf-lib": "^1.17.1",
    "pdfkit": "^0.15.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.8.0",
    "typescript": "^5.9.2",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.6.4",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/jest": "^30.0.0",
    "@vitejs/plugin-react": "^4.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^28.3.3",
    "electron-builder": "^24.13.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "ts-jest": "^29.4.1",
    "vite": "^6.3.5",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "de.klee.hausverwaltung",
    "productName": "Hausverwaltung",
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "build/icon.ico",
      "publisherName": "Hausverwaltung"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Hausverwaltung"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer/**",
      "db/**",
      "assets/**",
      "build/**",
      "LICENSE",
      "README.md"
    ],
    "directories": {
      "buildResources": "build"
    }
  }
}
